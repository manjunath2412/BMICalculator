<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dice.ms1.bmicalculator.MainActivity"><![CDATA[

        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">







        ]]>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/calculate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="103dp"
            android:text="@string/calculate_button"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_alignRight="@+id/height_text"
            android:layout_alignEnd="@+id/height_text" />

        <EditText
            android:id="@+id/mass_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:ems="10"
            android:hint="Enter your Mass"
            android:inputType="numberDecimal"
            android:text=""
            android:layout_alignTop="@+id/mass_message"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" />

        <EditText
            android:id="@+id/height_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter your Height"
            android:inputType="numberDecimal"
            android:text=""
            android:layout_below="@+id/height_message"
            android:layout_alignLeft="@+id/mass_text"
            android:layout_alignStart="@+id/mass_text"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/mass_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mass_value"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:layout_marginTop="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/mass_text"
            android:layout_alignStart="@+id/mass_text" />

        <TextView
            android:id="@+id/height_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/height_text"
            android:layout_alignStart="@+id/height_text"
            android:layout_below="@+id/mass_text"
            android:layout_marginTop="39dp"
            android:text="@string/height_value"
            android:textColor="@android:color/background_light"
            android:textSize="25sp" />

</RelativeLayout>

